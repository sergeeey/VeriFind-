# ============================================================================
# Production Environment Configuration Template
# Week 7 Day 3 - Copy to .env.production and fill in values
# ============================================================================

# ============================================================================
# Application Settings
# ============================================================================
ENV=production
LOG_LEVEL=info
DEBUG=false

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
API_TITLE="APE 2026 - Predictive Analytics API"
API_VERSION=1.0.0

# Security
SECRET_KEY=your-secret-key-here-change-in-production
CORS_ORIGINS=https://yourdomain.com,https://app.yourdomain.com
ALLOWED_HOSTS=yourdomain.com,app.yourdomain.com

# ============================================================================
# AI/LLM API Keys
# ============================================================================
# Claude API (Anthropic)
CLAUDE_API_KEY=sk-ant-api03-your-key-here
CLAUDE_MODEL=claude-sonnet-4-5-20250929

# DeepSeek API (Cost-effective for code generation)
DEEPSEEK_API_KEY=sk-your-deepseek-key-here
DEEPSEEK_MODEL=deepseek-reasoner

# ============================================================================
# Database Configuration
# ============================================================================
# PostgreSQL/TimescaleDB
POSTGRES_HOST=timescaledb
POSTGRES_PORT=5432
POSTGRES_DB=ape_timeseries
POSTGRES_USER=ape
POSTGRES_PASSWORD=your-secure-timescale-password-here

# Connection Pool
POSTGRES_POOL_SIZE=20
POSTGRES_MAX_OVERFLOW=10
POSTGRES_POOL_TIMEOUT=30

# ============================================================================
# Neo4j Configuration
# ============================================================================
NEO4J_URI=bolt://neo4j:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=your-secure-neo4j-password-here
NEO4J_DATABASE=neo4j

# ============================================================================
# Redis Configuration
# ============================================================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
REDIS_MAX_CONNECTIONS=50

# Cache TTL (seconds)
CACHE_TTL_SHORT=300      # 5 minutes
CACHE_TTL_MEDIUM=3600    # 1 hour
CACHE_TTL_LONG=86400     # 24 hours

# ============================================================================
# ChromaDB Configuration (Embedded)
# ============================================================================
CHROMA_PERSIST_DIRECTORY=/app/data/chroma
CHROMA_COLLECTION_NAME=ape_memory

# ============================================================================
# VEE (Verified Execution Environment)
# ============================================================================
VEE_WORKSPACE_DIR=/app/vee/workspace
VEE_MAX_EXECUTION_TIME=300  # 5 minutes
VEE_MAX_MEMORY_MB=1024
VEE_ENABLE_NETWORK=false
VEE_ENABLE_FILE_SYSTEM=false

# ============================================================================
# Rate Limiting
# ============================================================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_BURST=10

# API Keys (add your production keys)
API_KEY_TIER1=your-tier1-key-here  # 1000 requests/hour
API_KEY_TIER2=your-tier2-key-here  # 100 requests/hour
API_KEY_TIER3=your-tier3-key-here  # 10 requests/hour

# ============================================================================
# Monitoring & Observability
# ============================================================================
# Prometheus
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090

# Grafana
GRAFANA_USER=admin
GRAFANA_PASSWORD=your-secure-grafana-password-here

# Logging
LOG_FORMAT=json
LOG_FILE=/app/logs/api.log
LOG_MAX_BYTES=10485760  # 10 MB
LOG_BACKUP_COUNT=5

# Sentry (Error Tracking) - Optional
SENTRY_DSN=
SENTRY_ENVIRONMENT=production
SENTRY_TRACES_SAMPLE_RATE=0.1

# ============================================================================
# Performance Tuning
# ============================================================================
# Workers & Threads
WORKERS=4
THREADS_PER_WORKER=2
WORKER_TIMEOUT=120

# Request Limits
MAX_REQUEST_SIZE=10485760  # 10 MB
REQUEST_TIMEOUT=60

# ============================================================================
# Feature Flags
# ============================================================================
ENABLE_PARALLEL_ORCHESTRATION=true
ENABLE_MULTI_AGENT=true
ENABLE_DEBATE=true
ENABLE_DSPy_OPTIMIZATION=true

# ============================================================================
# Backup & Retention
# ============================================================================
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30
BACKUP_LOCATION=/app/backups

# ============================================================================
# SSL/TLS (if using)
# ============================================================================
SSL_ENABLED=false
SSL_CERT_PATH=/app/config/ssl/cert.pem
SSL_KEY_PATH=/app/config/ssl/key.pem

# ============================================================================
# External Services (Optional)
# ============================================================================
# S3-compatible storage for large datasets
S3_ENDPOINT=
S3_ACCESS_KEY=
S3_SECRET_KEY=
S3_BUCKET=

# Email notifications
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@yourdomain.com
